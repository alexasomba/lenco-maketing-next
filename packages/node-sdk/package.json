{
    "name": "lenco-node",
    "version": "2.0.0",
    "description": "Node.js SDK for Lenco API - Payments, Transfers, Collections",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
        "test": "vitest",
        "test:coverage": "vitest --coverage",
        "lint": "eslint src",
        "prepublishOnly": "npm run build"
    },
    "keywords": [
        "lenco",
        "payments",
        "api",
        "sdk",
        "fintech",
        "mobile-money",
        "africa"
    ],
    "author": "Alexander Asomba <alex@asomba.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alexasomba/lenco-node.git"
    },
    "bugs": {
        "url": "https://github.com/alexasomba/lenco-node/issues"
    },
    "homepage": "https://github.com/alexasomba/lenco-node#readme",
    "engines": {
        "node": ">=18"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "tsup": "^8.0.0",
        "typescript": "^5.3.0",
        "vitest": "^1.0.0",
        "eslint": "^8.55.0",
        "@typescript-eslint/eslint-plugin": "^6.13.0",
        "@typescript-eslint/parser": "^6.13.0"
    }
}